package org.stack;

import java.util.Arrays;

public class Stack<E> {

	private E[] obj = new E[5];
	int size = 0;

	public Stack() {
	}

	private static void increaseArraySize() {
		obj = Arrays.copyOf(obj, obj.length * 2);
	}

	public int size() {
		return size;
	}

	public boolean isEmpty() {
		return size == 0;
	}

	public void push(Object o) {
		if (size < obj.length) {
			obj[size++] = o;
		} else {
			increaseArraySize();
			obj[size++] = o;
		}
	}
	
	public Object pop(){
		return obj[--size];
	}
}